- form_for(@administrator, :url => resource_path, :html => { :multipart => true, :method => :put }) do |f|
  -content_for :sidebar do
    %h2
      Settings
    %p
      Manage your site-wide settings here.
    %p
      The information you enter here is available in some areas of the site and also within system generated email notifications to your clients. 
    %p
      Click the "Update Settings" button when you're done.

  = f.error_messages
  %div{ :style => "width:50%; float:left;" }
    %p
      = f.label :email
      = f.text_field :email, :class => 'text validate[required,custom[email]]'
    %p
      = f.label :site_name
      = f.text_field :site_name, :class => 'text validate[required,length[3,64]]'
    %p
      = f.label :site_email
      = f.text_field :site_email, :class => 'text validate[optional,length[5,100]]'
    %p
      = f.label :theme
      = f.select :theme, Administrator.themes
        
  %div{ :style => "width:50%; float:left;" }
    %p
      = f.label :home_page_title
      = f.text_field :home_page_title, :class => 'text validate[required,length[5,200]]'
    %p
      = f.label :blog_url, 'Blog URL'
      = f.text_field :blog_url, :class => 'text validate[optional,length[10,255]]'
    %p
      = f.label :google_analytics_key
      = f.text_field :google_analytics_key, :class => 'text validate[optional,length[10,20]]'
    %p
      = build_button('Update Settings &raquo;', 'blue', f)