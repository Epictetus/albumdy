<p>
  <% if @photo and !@photo.image.blank? -%>
    <%= link_to image_tag(@photo.image.url(:thumb), :alt => @photo.title), @photo.image.url %>
  <% end -%>
  <%= f.file_field :image, :class => 'text' %>
</p>
<p>
  <%= f.label :title %><br />
  <%= f.text_field :title, :class => 'text' %>
</p>
<p>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</p>

<%= render :partial => 'shared/buttons', :locals => {:action => action, :collection_url => manage_album_path(@album)} %>